@startuml

skinparam object {
  BackgroundColor #f5f5f5
  ArrowColor #4c4c4c
  BorderColor #233c68
}

object Product

Product : id 
Product : name 
Product : price 
Product : size 


object InventoryItem

InventoryItem : id 
InventoryItem : refProduct 
InventoryItem : refStore 
InventoryItem : refShelf 
InventoryItem : stockCount 
InventoryItem : shelfCount 


object Store

Store : id 
Store : name 
Store : address 
Store : location

object Shelf

Shelf : id 
Shelf : refStore 
Shelf : location 
Shelf : maxCapacity

Store "1" *-- "*" Shelf : contains >
InventoryItem "*" -o " 1" Shelf : < holds
Product "0..*" - "0..*" Store
(Product, Store) .. InventoryItem : associates
@enduml